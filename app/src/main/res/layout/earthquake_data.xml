<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout">

    <TextView
        android:id="@+id/magnitude"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/circle"
        android:fontFamily="sans-serif-medium"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:text="8.9" />

    <TextView
        android:id="@+id/locationOffset"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/magnitude"
        android:text="88km north of"
        android:layout_marginTop="15dp"
        android:textColor="@color/textColorEarthquakeDetails"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold|italic" />
    <TextView
        android:id="@+id/primaryLocation"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/magnitude"
        android:layout_toEndOf="@+id/locationOffset"
        android:text="florida"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textColor="@color/textColorEarthquakeLocation"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/date"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/primaryLocation"
        android:layout_weight="1"
        android:text="12 Feb, 2020"
        android:textAlignment="center"
        android:textColor="@color/textColorEarthquakeDetails"
        android:textSize="14dp"
        android:textStyle="bold|italic"></TextView>

    <TextView
        android:id="@+id/time"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/primaryLocation"
        android:text="5:30 pm"
        android:textAlignment="center"
        android:textColor="@color/textColorEarthquakeDetails"
        android:textSize="14dp"
        android:textStyle="bold|italic"></TextView>
</RelativeLayout>